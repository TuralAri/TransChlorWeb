{% extends 'base.html.twig' %}

{% block title %}Computations{% endblock %}

{% block body %}
    <div class="mx-[10%] px-4 py-8 flex flex-col">
        <h1 class="text-2xl font-bold mb-6">Vos calculs</h1>
        <div>
            <a href="#"
               class="inline-block mb-4 px-4 py-2 bg-gray-300 text-gray-800 rounded hover:bg-gray-400">
                ← Revenir en arrière
            </a>
            <a href="#" class="mb-4 px-4 py-2 bg-blue-500 text-white rounded hover:bg-blue-700 focus:outline-none cursor-pointer">
                Lancer un calcul
            </a>
        </div>

        <section class="space-y-4 mt-4">
            <div class="overflow-x-auto bg-white shadow-md rounded-lg">
                <table class="min-w-full table-auto">
                    <thead class="bg-gray-100 ">
                    <tr>
                        <th class="px-6 py-3 text-left text-sm font-medium text-gray-500">Numéro de calcul</th>
                        <th class="px-6 py-3 text-left text-sm font-medium text-gray-500">Date de début</th>
                        <th class="px-6 py-3 text-left text-sm font-medium text-gray-500">Date de fin</th>
                        <th class="px-6 py-3 text-left text-sm font-medium text-gray-500">Actions</th>
                        <th class="px-6 py-3 text-left text-sm font-medium text-gray-500">Status</th>
                    </tr>
                    </thead>
                    <tbody>
                    {% for computation in computations %}
                        <tr class="border-t hover:bg-gray-200">
                            <td class="px-6 py-4 text-sm font-medium text-gray-900">{{ computation.id }}</td>
                            <td class="px-6 py-4 text-sm text-gray-500">{{ computation.startDate|date('Y-m-d H:i:s') }}</td>
                            <td class="px-6 py-4 text-sm text-gray-500">{{ computation.endDate|date('Y-m-d H:i:s') }}</td>
                            <td class="px-6 py-4 text-sm">
                                <a href="{{ path('show_computation', {'id':computation.id}) }}" class="p-2 bg-blue-500 hover:bg-blue-800 text-white rounded">Voir les graphiques</a>
                            </td>
                            <td class="px-6 py-4 text-sm text-gray-500">{{ computation.endDate|date('Y-m-d H:i:s') }}</td>
                        </tr>
                    {% else %}
                        <tr>
                            <td colspan="3" class="px-6 py-4 text-sm text-center text-gray-500">Aucun calcul trouvé.</td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
            </div>
        </section>
        <div class="pagination mt-auto pt-4">
            {{ knp_pagination_render(computations, 'bundles/KnpPaginatorBundle/Pagination/tailwind.html.twig') }}
        </div>
    </div>
{% endblock %}
