{% extends 'base.html.twig' %}

{% block title %}Exposure Series
{% endblock %}

{% block body %}
    <div class="mx-[10%] px-4 py-8 ">
        {% for message in app.flashes('success') %}
            <div class="bg-green-100 p-4 mb-4 rounded-lg">
                {{ message }}
            </div>
        {% endfor %}

        {% for message in app.flashes('error') %}
            <div class="bg-red-100 p-4 mb-4 rounded-lg">
                {{ message }}
            </div>
        {% endfor %}
        <h1 class="text-2xl font-bold mb-6">Station météo : {{weatherStation.getLocalFileName()}}</h1>
        <div class="flex justify-between items-center p-6 bg-gray-50 border border-gray-200 rounded-lg shadow-sm">
            <p class="text-xl">Calculer une nouvelle série d'expositions</p>
            <a href="{{ path('exposure_series_generate',{'id': weatherStation.id}) }}" class="px-4 py-2 bg-blue-500 text-white rounded-lg hover:bg-blue-700 focus:outline-none cursor-pointer">Ajouter</a>
        </div>

        <section class="space-y-4">
            {# Ajouter d'autres fichiers ici si nécessaire #}
            <section id="part1" class="bg-white p-6 rounded-lg border-2 space-y-4 border-black mt-4">
                <div class="flex justify-between items-center">
                    <h2 class="text-xl font-semibold">Épandage Mécanique</h2>
                    <button id="part1Button" class="text-xl font-bold  border-black p-4">
                        +
                    </button>
                </div>
                <div class="hidden gap-2 items-center w-fit justify-left">
                    <div><label for="meteo_form_mechanicalAnnualSodium" class="required">Concentration annuelle en chlorure de sodium</label><input type="text" id="meteo_form_mechanicalAnnualSodium" name="meteo_form[mechanicalAnnualSodium]" required="required" inputmode="decimal" class="ml-2 p-2 border rounded-lg text-center"></div>
                    <p>[g/m2]</p>
                </div>
            </section>
        </section>
    </div>
{% endblock %}