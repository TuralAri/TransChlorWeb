{% extends 'base.html.twig' %}

{% block title %}{{ 'input.title' | trans }}{% endblock %}

{% block body %}
    <main class="flex-1">
        <div class=" mx-[10%] px-4 py-8 ">

            {% for message in app.flashes('success') %}
                <div class="bg-green-100 p-4 mb-4 rounded-lg">
                    {{ message }}
                </div>
            {% endfor %}

            {% for message in app.flashes('error') %}
                <div class="bg-red-100 p-4 mb-4 rounded-lg">
                    {{ message }}
                </div>
            {% endfor %}

            <h1 class="text-2xl font-bold mb-6">{{ 'input.pageTitle' | trans }}</h1>
            <div>
                <a href="{{ path('index') }}"
                   class="inline-block mb-4 px-4 py-2 bg-gray-300 text-gray-800 rounded hover:bg-gray-400">
                    <i class="fa-solid fa-arrow-left mr-1"></i> {{ 'goBack' | trans }}
                </a>
                <a href="{{ path('add_input') }}" class="inline-block px-4 py-2 bg-blue-500 text-white rounded hover:bg-blue-700 focus:outline-none cursor-pointer">
                    <i class="fa-solid fa-plus mr-1"></i> {{ 'input.addBtn' | trans }}
                </a>
            </div>

            <section class="space-y-4 mt-4">
                <div class="overflow-x-auto bg-white shadow-md rounded-lg">
                    <table class="min-w-full table-auto">
                        <thead class="bg-gray-100 ">
                        <tr>
                            <th class="px-6 py-3 text-left text-sm font-medium text-gray-500">{{ 'input.name' | trans }}</th>
                            <th class="px-6 py-3 text-left text-sm font-medium text-gray-500">{{ 'input.comment' | trans }}</th>
                            <th class="px-6 py-3 text-left text-sm font-medium text-gray-500">{{ 'actions' | trans }}</th>
                        </tr>
                        </thead>
                        <tbody>
                        {% for input in inputs %}
                            <tr class="border-t hover:bg-gray-200">
                                <td class="px-6 py-4 text-sm font-medium text-gray-900">{{ input.name }}</td>
                                <td class="px-6 py-4 text-sm text-gray-500">
                                    {{ input.comment ?? 'input.noComment' | trans }}
                                </td>
                                <td class="px-6 py-4 text-sm">
                                    <a href="" class="inline-block px-4 py-2 bg-yellow-500 hover:bg-yellow-800 rounded text-white"
                                       title="{{ 'input.edit' | trans }}">
                                        <i class="fa-solid fa-edit"></i>
                                    </a>
                                    <form method="post" action="" class="inline-block" onsubmit="return confirm('{{ 'materials.confirmDelete' | trans }}');">
                                        <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ input.id) }}">
                                        <button type="submit" class="px-4 py-2 bg-red-500 hover:bg-red-800 rounded text-white" title="{{ 'input.delete' | trans }}">
                                            <i class="fa-solid fa-trash"></i>
                                        </button>
                                    </form>

                                </td>
                            </tr>
                        {% else %}
                            <tr>
                                <td colspan="4" class="px-6 py-4 text-sm text-center text-gray-500">Vous n'avez créé aucun fichier de simulation.</td>
                            </tr>
                        {% endfor %}
                        </tbody>
                    </table>
                </div>
            </section>
            <div class="pagination mt-auto pt-4">
                {{ knp_pagination_render(inputs, 'bundles/KnpPaginatorBundle/Pagination/tailwind.html.twig') }}
            </div>
        </div>
    </main>
{% endblock %}