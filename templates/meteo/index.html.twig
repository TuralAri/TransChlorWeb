{% extends 'base.html.twig' %}

{% block title %}Meteo Form
{% endblock %}

{% block body %}
	<h1>Meteo Form</h1>

	<div class="max-w-4xl mx-auto p-6 bg-white shadow-md rounded-lg">
		<h1 class="text-2xl font-bold text-center text-gray-800 mb-6">Météo - Traitement</h1>

		{{ form_start(form, { attr: { class: 'space-y-4' } }) }}
		
		{% for field in form %}
			<div class="flex flex-col">
				{{ form_label(field, null, { attr: { class: 'text-gray-700 font-medium' } }) }}
				{{ form_widget(field, { attr: { class: 'p-2 border border-gray-300 rounded-md focus:ring focus:ring-blue-300' } }) }}
			</div>
		{% endfor %}

		<button class="w-full bg-blue-600 hover:bg-blue-700 text-white font-semibold py-2 px-4 rounded-lg transition duration-300">
			Calculer
		</button>

		{{ form_end(form) }}
	</div>


{% endblock %}
