<footer class="bg-gray-800 text-gray-300 py-8">
    <div class="container mx-auto px-4">
        <div class="grid md:grid-cols-3 gap-8">
            <div>
                <h3 class="text-xl font-bold mb-4">{{ 'footer.transchlor' | trans }}</h3>
                <p class="mb-4">{{ 'footer.description' | trans }}</p>
            </div>
            <div>
                <h3 class="text-xl font-bold mb-4">{{ 'footer.quickLinks' | trans }}</h3>
                <ul class="space-y-2">
                    <li><a href="{{ path('index') }}" class="hover:text-white transition-colors">{{ 'header.home' | trans }}</a></li>
                    <li><a href="{{ path('meteo_form') }}" class="hover:text-white transition-colors {{ not app.user ? 'opacity-50 cursor-not-allowed' : '' }}">{{ 'header.climate' | trans }}</a></li>
                    <li><a href="{{ path('index') }}" class="hover:text-white transition-colors {{ not app.user ? 'opacity-50 cursor-not-allowed' : '' }}">{{ 'header.transportModel' | trans }}</a></li>
                    <li><a href="{{ path('index') }}" class="hover:text-white transition-colors {{ not app.user ? 'opacity-50 cursor-not-allowed' : '' }}">{{ 'header.probabilistic' | trans }}</a></li>
                </ul>
            </div>
            <div>
                <h3 class="text-xl font-bold mb-4">{{ 'footer.contact' | trans }}</h3>
            </div>
        </div>
        <div class="border-t border-gray-700 mt-8 pt-8 text-center">
            <p>&copy; {% if "now"|date("Y") == "2025" %}2025{% else %}2025 - {{ "now"|date("Y") }}{% endif %} {{ 'footer.copyright' | trans }}</p>
        </div>
    </div>
</footer>